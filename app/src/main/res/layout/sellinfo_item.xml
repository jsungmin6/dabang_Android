<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sellInfoImg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/selling"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/selling"
            android:text="분양중"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/sellInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:text="20.08.13 특별공급"
            android:textColor="#D60F0F"
            android:textSize="11sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/sellInfoName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:text="DMC 센틀럴자이"
        android:textColor="#000000"
        android:textSize="13sp" />

</LinearLayout>